@{
    ViewBag.Title = "Busticket - Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Busticket</title>

    <!-- Fuente Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- CDN de TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-inter bg-white text-gray-700">

    <!-- HEADER -->
    <header class="py-6">
        <div class="w-[95%] max-w-[1400px] mx-auto flex items-center justify-between">

            <!-- Logo -->
            <div class="text-3xl font-extrabold text-[#284D67] cursor-pointer">
                <a href="/Home?/index">Busticket</a>
            </div>

            <!-- Links -->
            <nav class="flex gap-12">
                <a href="#" class="text-base font-medium hover:text-[#002C53] hover:font-bold">Destinos</a>
                <a href="#" class="text-base font-medium hover:text-[#002C53] hover:font-bold">Planes</a>
                <a href="#" class="text-base font-medium hover:text-[#002C53] hover:font-bold">Descuentos</a>
            </nav>

            <!-- Iconos -->
            <div class="flex items-center">
                <img src="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='28' height='28' fill='%23284D67' viewBox='0 0 24 24'><path d='M7 18c-1.104 0-2 .897-2 2 0 1.102.896 2 2 2 1.103 0 2-.898 2-2 0-1.103-.897-2-2-2zm10 0c-1.104 0-2 .897-2 2 0 1.102.896 2 2 2 1.103 0 2-.898 2-2 0-1.103-.897-2-2-2zM7.334 14h9.744c.83 0 1.553-.52 1.836-1.289l2.734-7.318A1 1 0 0 0 20.7 4H5.21l-.94-2.265A1 1 0 0 0 3.355 1H1v2h1.611l3.598 8.643-1.35 2.835A2 2 0 0 0 6.666 17H19v-2H7.334l1-1z'/></svg>"
                     class="w-7 ml-4 cursor-pointer">

                <img src="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='28' height='28' fill='%23284D67' viewBox='0 0 24 24'><path d='M12 12c2.761 0 5-2.239 5-5s-2.239-5-5-5-5 2.239-5 5 2.239 5 5 5zm0 2c-3.314 0-10 1.657-10 5v3h20v-3c0-3.343-6.686-5-10-5z'/></svg>"
                     class="w-7 ml-4 cursor-pointer">
            </div>

        </div>
    </header>

    <!-- BUSCADOR -->
    <section class="mt-8 flex justify-center">
        <form class="flex bg-white shadow-lg rounded-[40px] p-3 w-full max-w-[900px] items-center">

            <!-- Desde -->
            <div class="flex flex-col px-6 py-3">
                <label class="text-xs font-semibold text-gray-500 mb-1">Desde</label>
                <input type="text" name="origen" placeholder="Ciudad..."
                       class="border-none outline-none text-base text-black">
            </div>

            <span class="w-px h-10 bg-gray-300"></span>

            <!-- Hasta -->
            <div class="flex flex-col px-6 py-3">
                <label class="text-xs font-semibold text-gray-500 mb-1">Hasta</label>
                <input type="text" name="destino" placeholder="Ciudad..."
                       class="border-none outline-none text-base text-black">
            </div>

            <span class="w-px h-10 bg-gray-300"></span>

            <!-- Fecha ida -->
            <div class="flex flex-col px-6 py-3">
                <label class="text-xs font-semibold text-gray-500 mb-1">Fecha ida</label>
                <input type="date" name="fechaIda" class="outline-none border-none text-base">
            </div>

            <span class="w-px h-10 bg-gray-300"></span>

            <!-- Fecha vuelta -->
            <div class="flex flex-col px-6 py-3">
                <label class="text-xs font-semibold text-gray-500 mb-1">Fecha vuelta</label>
                <input type="date" name="fechaVuelta" class="outline-none border-none text-base">
            </div>

            <!-- Botón Search -->
            <button type="submit" class="w-11 h-11 ml-4 rounded-full bg-[#284D67] flex justify-center items-center">
                <img src="https://img.icons8.com/ios-glyphs/30/ffffff/search.png" class="w-5">
            </button>

        </form>
    </section>

    <section class="mt-8 w-[95%] max-w-[1700px] mx-auto">
        <div class="relative h-[650px] rounded-xl bg-cover bg-center flex justify-center items-end"
             style="background-image: url('https://res.cloudinary.com/dbt58u6ag/image/upload/v1764883553/imagen_fondo_d86xtq.jpg');">

            <!-- Overlay degradado -->
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black/50 rounded-xl"></div>

            <!-- Contenido del hero -->
            <div class="relative z-10 text-center mb-14">
                <h1 class="text-white text-5xl md:text-6xl font-extrabold mb-5">
                    Tu próximo destino empieza aquí.
                </h1>
                <a href="/Rutas/Index"
                   class="px-4 py-1 rounded-full bg-white font-semibold text-sm md:text-base hover:bg-[#284D67] hover:text-white transition inline-block">
                    Buscar ruta
                </a>

            </div>

        </div>
    </section>


</body>
</html>
