@model Busticket.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Busticket - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body class="w-full h-full bg-gray-100 flex items-center justify-center">

    <!-- CARD CONTENEDOR -->
    <div class="flex w-[1000px] h-[700px] bg-white rounded-2xl shadow-lg overflow-hidden">

        <!-- IZQUIERDA (FORM) -->
        <div class="flex flex-col justify-center px-16 py-10 w-1/2">

            <h1 class="text-3xl font-bold text-[#0A2A43] mb-10">Busticket</h1>

            <h2 class="text-4xl font-bold">¡Bienvenido de nuevo!</h2>
            <p class="text-gray-600 mt-2">Ingresa tus datos para acceder a tu cuenta</p>

            <form asp-action="Login" method="post" class="mt-10 space-y-5">

                <div>
                    <label class="font-medium">Correo electrónico</label>
                    <input asp-for="Email" class="w-full border border-gray-300 rounded-lg p-3 mt-1" placeholder="Ingresa tu correo" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="font-medium">Contraseña</label>
                    <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded-lg p-3 mt-1" placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                @if (ViewBag.Error != null)
                {
                    <p class="text-red-500 text-sm">@ViewBag.Error</p>
                }

                <a class="text-blue-600 text-sm block hover:underline">¿Olvidaste tu contraseña?</a>

                <button type="submit" class="w-full bg-[#143A58] text-white py-3 rounded-lg mt-6 font-medium hover:bg-[#0F2B45]">
                    Iniciar sesión
                </button>

                <!-- BOTONES DE GOOGLE Y APPLE (UNO AL LADO DEL OTRO) -->
                <div class="flex gap-3 mt-6">
                    <button type="button" class="flex-1 border border-gray-300 py-3 rounded-lg flex items-center justify-center gap-2 hover:bg-gray-50">
                        <img src="/img/google.png" class="w-5 h-5" />
                        Google
                    </button>

                    <button type="button" class="flex-1 border border-gray-300 py-3 rounded-lg flex items-center justify-center gap-2 hover:bg-gray-50">
                        <img src="/img/apple.png" class="w-5 h-5" />
                        Apple
                    </button>
                </div>

                <!-- LINK REGISTRO -->
                <p class="text-sm text-gray-600 mt-4 text-center">
                    ¿No tienes cuenta?
                    <a href="/Auth/Register" class="text-blue-600 font-medium hover:underline">Regístrate</a>
                </p>

            </form>
        </div>

        <!-- DERECHA (IMAGEN) -->
        <div class="w-1/2 min-h-[400px]">
            <img src="https://res.cloudinary.com/dbt58u6ag/image/upload/v1764884373/chris-lee-70l1tDAI6rM-unsplash_2_b4fmff.png"
                 class="w-full h-full object-cover rounded-lg"
                 alt="Imagen de ruta" />
        </div>


    </div>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
