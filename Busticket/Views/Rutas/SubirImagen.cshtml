@{
    ViewBag.Title = "Subir Imagen";
}

<h2 class="text-3xl font-bold text-[#0A2A43] mb-6">Subir imagen de ruta</h2>

<!-- Mensajes de error -->
@if (TempData["Error"] != null)
{
    <div class="bg-red-200 text-red-800 p-2 rounded mb-4">
        @TempData["Error"]
    </div>
}

<!-- Mensajes de éxito -->
@if (TempData["Success"] != null)
{
    <div class="bg-green-200 text-green-800 p-2 rounded mb-4">
        @TempData["Success"]
        @if (TempData["ImagenUrl"] != null)
        {
            <div class="mt-2">
                <img src="@TempData["ImagenUrl"]" alt="Imagen subida" class="w-64 rounded shadow" />
            </div>
        }
    </div>
}

@using (Html.BeginForm("SubirImagen", "Rutas", FormMethod.Post, new { enctype = "multipart/form-data", @class = "max-w-xl space-y-4" }))
{
    <div>
        <label class="block font-semibold mb-2">Selecciona una imagen</label>
        <input type="file" name="imagen" class="border p-2 w-full rounded bg-white" />
    </div>

    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white p-3 rounded w-full font-semibold">
        Subir imagen
    </button>
}
